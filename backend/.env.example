# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/hiking_portal

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Port
PORT=8081

# SendGrid Email Service (for notifications)
SENDGRID_API_KEY=your-sendgrid-api-key-here
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=The Narrow Trail

# OpenWeatherMap API (for weather forecasts)
# Get your free API key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your-openweathermap-api-key-here

# Environment
NODE_ENV=development

# CORS Origin (frontend URL)
# For local development: http://localhost:3000
# For production: https://helloliam.web.app
CORS_ORIGIN=http://localhost:3000

# Optional: Admin email for notifications
ADMIN_EMAIL=admin@yourdomain.com
