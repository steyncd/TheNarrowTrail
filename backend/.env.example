# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/hiking_portal

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Port
PORT=8081

# SendGrid Email Service (for email notifications)
SENDGRID_API_KEY=your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Twilio SMS Service (for SMS notifications)
# Get your credentials from: https://console.twilio.com/
# Note: TWILIO_WHATSAPP_NUMBER is used for SMS (legacy naming from WhatsApp migration)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=+1234567890

# OpenWeatherMap API (for weather forecasts)
# Get your free API key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your-openweathermap-api-key-here

# Environment
NODE_ENV=development

# CORS Origin (frontend URL)
# For local development: http://localhost:3000
# For production: https://helloliam.web.app
CORS_ORIGIN=http://localhost:3000

# Optional: Admin email for notifications
ADMIN_EMAIL=admin@yourdomain.com
