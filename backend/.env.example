# ==============================================================================
# HIKING PORTAL - BACKEND ENVIRONMENT CONFIGURATION
# ==============================================================================
# Copy this file to .env for local development
# For production deployments, set these values in your hosting platform

# ==============================================================================
# CORE APPLICATION SETTINGS
# ==============================================================================
NODE_ENV=development
PORT=5000

# ==============================================================================
# SECURITY CONFIGURATION
# ==============================================================================
# JWT Secret - REQUIRED - Use a strong, random 32+ character string
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
# Option 1: Full DATABASE_URL (recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/hiking_portal

# Option 2: Individual database settings (for development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hiking_portal
DB_USER=postgres
DB_PASSWORD=your-database-password

# For Google Cloud SQL (production)
# DB_HOST=/cloudsql/your-project:region:instance-name

# ==============================================================================
# FRONTEND INTEGRATION
# ==============================================================================
# Frontend URL for CORS and email links
FRONTEND_URL=http://localhost:3000

# ==============================================================================
# EMAIL CONFIGURATION (SendGrid)
# ==============================================================================
# SendGrid API Key for sending emails
SENDGRID_API_KEY=your-sendgrid-api-key

# From email address
FROM_EMAIL=noreply@yourapp.com

# Support email for data retention notices
SUPPORT_EMAIL=support@yourapp.com

# ==============================================================================
# SMS CONFIGURATION (Twilio)
# ==============================================================================
# Twilio credentials for SMS notifications
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# For WhatsApp (optional)
TWILIO_WHATSAPP_NUMBER=+1234567890

# ==============================================================================
# EXTERNAL SERVICES
# ==============================================================================
# Weather API key (OpenWeatherMap)
OPENWEATHER_API_KEY=your-openweather-api-key

# Maps API key (Google Maps)
MAPS_API_KEY=your-google-maps-api-key

# Payment processing (Stripe)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Redis URL for caching (optional)
REDIS_URL=redis://localhost:6379

# ==============================================================================
# DEVELOPMENT FLAGS
# ==============================================================================
# Enable debug mode
DEBUG=true

# Log level (debug, info, warn, error)
LOG_LEVEL=debug

# Enable CORS for development
ENABLE_CORS=true

# ==============================================================================
# NOTES
# ==============================================================================
# - Never commit .env files to version control
# - Use strong, unique passwords and API keys
# - Rotate secrets regularly in production
# - Set production values in your hosting platform environment variables