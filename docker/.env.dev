# Hiking Portal Development Environment Variables

# Database Configuration
# Updated to use standalone database with production data
HIKING_POSTGRES_DB=hiking_portal
HIKING_POSTGRES_USER=postgres
HIKING_POSTGRES_PASSWORD=hiking_password

# Backend Configuration
NODE_ENV=development
JWT_SECRET=your-jwt-secret-dev-change-in-production-very-long-secret-key
FRONTEND_URL=http://localhost:3000

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_ENV=development

# Email Configuration (Optional for development)
SENDGRID_API_KEY=
FROM_EMAIL=noreply@localhost

# Home Assistant Database
HA_POSTGRES_DB=homeassistant
HA_POSTGRES_USER=homeassistant
HA_POSTGRES_PASSWORD=homeassistant_dev_password

# Development Settings
DEBUG=true
LOG_LEVEL=debug
ENABLE_CORS=true

# API Keys (Development - Add your own)
WEATHER_API_KEY=
MAPS_API_KEY=
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# Socket.IO Configuration
SOCKET_IO_ENABLED=true
SOCKET_IO_CORS_ORIGIN=http://localhost:3000