# ============================================================================
# HIKING PORTAL - LOCAL DEVELOPMENT ENVIRONMENT
# ============================================================================
# This file contains ONLY local development settings
# Copy this to .env.local and customize as needed
# NEVER commit .env.local to version control
# ============================================================================

# ============================================================================
# LOCAL DATABASE CONFIGURATION (Docker PostgreSQL)
# ============================================================================
HIKING_POSTGRES_DB=hiking_portal_dev
HIKING_POSTGRES_USER=hiking_user
HIKING_POSTGRES_PASSWORD=hiking_pass_dev_123

# ============================================================================
# LOCAL BACKEND API CONFIGURATION
# ============================================================================
NODE_ENV=development
PORT=5000
JWT_SECRET=dev-jwt-secret-change-in-production-minimum-64-chars-required
FRONTEND_URL=http://localhost:3000

# Local Database Connection (Docker networking)
DATABASE_URL=postgresql://hiking_user:hiking_pass_dev_123@hiking_postgres:5432/hiking_portal_dev

# ============================================================================
# LOCAL FRONTEND CONFIGURATION
# ============================================================================
REACT_APP_API_URL=http://localhost:5000
REACT_APP_ENV=development

# ============================================================================
# LOCAL DEVELOPMENT FEATURES
# ============================================================================
DEBUG=true
LOG_LEVEL=debug
ENABLE_CORS=true
SOCKET_IO_ENABLED=true
SOCKET_IO_CORS_ORIGIN=http://localhost:3000

# ============================================================================
# OPTIONAL LOCAL SERVICES
# ============================================================================
# Email (SendGrid - optional for local dev)
SENDGRID_API_KEY=
FROM_EMAIL=noreply@localhost

# Redis (Local Docker container)
REDIS_URL=redis://redis:6379

# ============================================================================
# LOCAL DOCKER CONFIGURATION
# ============================================================================
COMPOSE_PROJECT_NAME=hiking-portal-dev
DOCKER_BUILDKIT=1

# ============================================================================
# DEVELOPMENT API KEYS (Optional - Add your test keys)
# ============================================================================
# Weather API (OpenWeatherMap test key)
WEATHER_API_KEY=

# Maps API (Google Maps test key)
MAPS_API_KEY=

# Payment Processing (Stripe test keys)
STRIPE_SECRET_KEY=sk_test_
STRIPE_PUBLISHABLE_KEY=pk_test_

# SMS (Twilio test credentials)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=