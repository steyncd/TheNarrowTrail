# ==============================================================================
# HIKING PORTAL - FRONTEND ENVIRONMENT CONFIGURATION
# ==============================================================================
# Copy this file to .env.local for local development
# For production deployments, set these values in your hosting platform

# ==============================================================================
# API CONFIGURATION
# ==============================================================================
# Backend API URL - REQUIRED
# Development: http://localhost:5000
# Production: https://your-backend-domain.com
REACT_APP_API_URL=http://localhost:5000

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
# Enable/disable features in the frontend
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_OFFLINE_MODE=true

# ==============================================================================
# ANALYTICS & MONITORING
# ==============================================================================
# Google Analytics ID (optional)
# REACT_APP_GA_TRACKING_ID=

# Sentry DSN for error tracking (optional)
# REACT_APP_SENTRY_DSN=

# ==============================================================================
# EXTERNAL SERVICES
# ==============================================================================
# Firebase Configuration (if using Firebase features)
# REACT_APP_FIREBASE_API_KEY=
# REACT_APP_FIREBASE_AUTH_DOMAIN=
# REACT_APP_FIREBASE_PROJECT_ID=
# REACT_APP_FIREBASE_STORAGE_BUCKET=
# REACT_APP_FIREBASE_MESSAGING_SENDER_ID=
# REACT_APP_FIREBASE_APP_ID=

# Maps API Key (for location features)
# REACT_APP_MAPS_API_KEY=

# ==============================================================================
# DEVELOPMENT SETTINGS
# ==============================================================================
# Show debug information in development
REACT_APP_DEBUG=true

# API request timeout (in milliseconds)
REACT_APP_API_TIMEOUT=30000

# ==============================================================================
# NOTES
# ==============================================================================
# - Only variables prefixed with REACT_APP_ are accessible in React
# - Never commit .env.local or .env.production to version control
# - Use .env.example to document required environment variables
# - Set production values in your hosting platform (Vercel, Netlify, etc.)